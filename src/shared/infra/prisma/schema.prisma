generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-arm64-openssl-1.1.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Company {
  id        String   @id @default(uuid())
  name      String
  cnpj      String   @unique
  createdAt DateTime @default(now())
  User      User[]

  @@map("companies")
}

model User {
  id         String   @id @default(uuid())
  name       String
  email      String   @unique
  password   String
  isAdmin    Boolean  @default(false)
  company_id String
  company    Company  @relation(fields: [company_id], references: [id])
  created_at DateTime @default(now())

  @@map("users")
}

model Admin {
  id         String   @id @default(uuid())
  name       String
  email      String   @unique
  password   String
  created_at DateTime @default(now())

  @@map("admins")
}

model Image {
  id         String   @id @default(uuid())
  name       String
  size       Int
  key        String
  url        String
  created_at DateTime @default(now())

  @@map("images")
}
